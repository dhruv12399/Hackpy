{% extends 'hackernews/base.jinja' %}

{% block title %}Add reply{% endblock %}

{% block content %}

<center>
	<table  class="main_table" >
		<tr>
			<td bgcolor="#ff6600">
				<table class="header" cellspacing="0" cellpadding="0" >
					<tr>
						<td class="logo-cell"><a href="{{url ('hackernews:home')}}"><img src="https://news.ycombinator.com/y18.gif" class="logo"></a></td>
						<td style="color: #000000;"><strong>Add Reply</strong></td>
					</tr>
				</table>
			</td>
		</tr>
		<tr class="gap"></tr>
		<tr>
			<td style="padding: 10px">
				<table cellspacing="0" cellpadding="0">
					<tr>
						<div style="margin-bottom: 5px">
							<span class="subtext">{{comment.added_by.username}} | 
								{% if (nowtime - comment.added_time).days < 1 %}
									{% if (nowtime - comment.added_time).seconds/3600 < 1 %}
										{{((nowtime - comment.added_time).seconds/60)|round|int }} minutes ago 
									{% else %}
										{{((nowtime - comment.added_time).seconds/3600)|round|int }} hours ago
									{% endif %}
								{% else %}
									{{(nowtime - comment.added_time).days}} days ago
								{% endif %}
							</span>
							<p style="color: #000000">{{comment.content}}</p>
						</div>
					</tr>
					<tr>
						<td>
							<form method="post">
								{% csrf_token %}
								<textarea name="content" required id="id_content" rows="6" cols="60"></textarea>
								<br>
								<br>
								<input type="submit" value="add reply">
							</form>
						</td>
					</tr>
				</table>
			</td>
		</tr>
	</table>
</center>

{% endblock %}
